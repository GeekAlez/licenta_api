<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LicentaApp.PachetPage"
             Title="PachetPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Editor Placeholder="Introdu numele pachetului" Text="{Binding Nume}"
            HeightRequest="100" />
            <Editor Placeholder="Introdu tipul categoriei de eveniment" Text="{Binding Eveniment}"
 HeightRequest="100" />
            <Picker Title="Alege locatia evenimentului" ItemsSource="{Binding Restaurante, Mode=OneWay}" ItemDisplayBinding="{Binding Locatie}" />
            <Editor Placeholder="Introdu pretul pachetului" Text="{Binding Pret}"
 HeightRequest="100" />
            <Editor Placeholder="Introdu informatii suplimentare ale pachetului" Text="{Binding InformatiiSuplimentare}"
 HeightRequest="100" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="Salveaza" Clicked="OnSaveButtonClicked" />
                <Button Grid.Column="1" Text="Sterge" Clicked="OnDeleteButtonClicked"/>
            </Grid>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>