<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LicentaApp.RestaurantPage"
             Title="RestaurantPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Editor Placeholder="Introdu numele restaurantului" Text="{Binding Nume}"
            HeightRequest="100" />
            <Editor Placeholder="Introdu capacitatea restaurantului" Text="{Binding Capacitate}"
 HeightRequest="100" />
            <Editor Placeholder="Introdu locatia restaurantului" Text="{Binding Locatie}"
 HeightRequest="100" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="Salveaza" Clicked="OnSaveButtonClicked" />
                <Button Grid.Column="1" Text="Sterge" Clicked="OnDeleteButtonClicked"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>